@model WebApi.Models.Categoria
@{
    ViewData["Title"] = "Crear categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Crear una nueva categoría</h3>
<form method="post" asp-action="Crear">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">

            <span asp-validation-for="Nombre" class="text-danger"></span>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Nombre" asp-for="Nombre">
                <label for="floatingInput">Nombre</label>
            </div>

            <div class="row">
                <div class="col-4">
                    <label>Estado de la Categoría</label>
                </div>
                <div class="col-8">
                    <p>
                        <input type="radio" asp-for="Activo" value="false" />
                        Inactivo
                    </p>
                    <span asp-validation-for="Activo" class="text-danger"></span>

                    <p>
                        <input type="radio" asp-for="Activo" value="true" />
                        Activo
                    </p>
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
            </div>

            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            <div class="mb-3">
                <label>Fecha de Creación</label>
                <input asp-for="FechaCreacion" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Crear</button>
            &nbsp;
        </div>
    </div>
</form>

