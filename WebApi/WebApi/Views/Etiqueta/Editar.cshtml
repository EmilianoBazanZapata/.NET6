@model WebApi.Models.Etiqueta
@{
    ViewData["Title"] = "Editar etiqueta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar etiqueta</h3>
<form method="post" asp-action="Editar">

    <!--Importante para editar-->
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 mt-4">

                <span asp-validation-for="Titulo" class="text-danger"></span>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Nombre" asp-for="Titulo">
                    <label for="floatingInput">Nombre</label>
                </div>

                <span asp-validation-for="Fecha" class="text-danger"></span>
                <div class="mb-3">
                    <label>fecha</label>
                    <input asp-for="Fecha" class="form-control" />
                </div>

            </div>

        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Editar</button>
            &nbsp;
        </div>
    </div>
</form>

